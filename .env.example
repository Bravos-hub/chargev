# =============================================================================
# EVzone Backend Environment Configuration
# =============================================================================
# Copy this file to .env and update the values as needed

# DATABASE - Local Docker PostgreSQL (port 5433 to avoid Windows conflicts)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/evzone_db?schema=public

# DATABASE - Production (DigitalOcean - uncomment and update)
# DATABASE_URL=postgresql://user:password@your-db.db.ondigitalocean.com:25061/db?sslmode=require

# Redis
REDIS_URL=redis://localhost:6379

# Kafka (optional)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=evzone-api

# JWT - Generate secure secrets for production: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_EXPIRATION=15m

# OAuth (optional)
GOOGLE_CLIENT_ID=
APPLE_CLIENT_ID=

# Payments (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Server
PORT=3000
NODE_ENV=development
CORS_ORIGINS=http://localhost:5173,http://localhost:3001